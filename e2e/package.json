{
  "name": "photo-finder-e2e",
  "version": "1.0.0",
  "description": "End-to-end testing for Photo Finder application",
  "scripts": {
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report e2e-results/html-report",
    "e2e:install": "playwright install",
    "e2e:install-deps": "playwright install-deps",
    "e2e:setup": "npm run e2e:install && npm run e2e:install-deps",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:webkit": "playwright test --project=webkit",
    "e2e:mobile": "playwright test --project='Mobile Chrome'",
    "e2e:safari": "playwright test --project='Mobile Safari'",
    "e2e:codegen": "playwright codegen http://localhost:5173",
    "demo": "playwright test --headed --project=chromium --workers=1",
    "demo:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "playwright": "^1.55.1"
  }
}
